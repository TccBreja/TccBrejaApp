<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="app.youbeer.com.br.appbreja.MenuPadraoActivity"
        tools:showIn="@layout/app_bar_menu_padrao">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/content_menu_padrao_txt1"
            android:id="@+id/textViewSaudacao"
            android:gravity="right"
            android:textSize="28sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/content_menu_padrao_txt2"
            android:id="@+id/textViewProcura"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_below="@+id/textViewSaudacao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewEstabelecimento"
            android:src="@drawable/estabelecimento"
            android:layout_below="@+id/textViewProcura"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewCerveja"
            android:src="@drawable/cerveja"
            android:layout_below="@+id/imageViewEstabelecimento"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButtonRoleComprar"
            android:checked="false"
            android:background="@drawable/toogle_switch"
            android:textOff=""
            android:textOn=""
            android:gravity="center"
            android:layout_below="@+id/imageViewRoleComprar"
            android:layout_alignRight="@+id/textViewSaudacao"
            android:layout_alignEnd="@+id/textViewSaudacao"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/content_menu_padrao_txt3"
            android:id="@+id/textViewPretende"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_below="@+id/imageViewCerveja"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewRoleComprar"
            android:src="@drawable/desenhocomprarrole"
            android:layout_below="@+id/textViewPretende"
            android:layout_alignLeft="@+id/textViewPretende"
            android:layout_alignStart="@+id/textViewPretende"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</ScrollView>